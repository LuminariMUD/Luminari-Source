root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{md,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Makefile*]
indent_style = tab
indent_size = 4

[*.{php,js}]
indent_style = space
indent_size = 2

[*.{sh,pl}]
indent_style = space
indent_size = 2 